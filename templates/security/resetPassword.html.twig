{% extends 'base.html.twig' %}
{% block banner %}
{% endblock %}

{% block header %}
         <header>
            <!-- header inner -->
            <div class="header">
               <div class="container-fluid">
                  <div class="row">
                     <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                           <div class="center-desk">
                           </div>
                        </div>
                     </div>
                     <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <ul class="btn">
                           
                           <li><button type="button" id="sidebarCollapse">
                              <img src="{{asset('images/menu_icon.png')}}" alt="#" />
                              </button>
                           </li>
                        </ul>
                     </div>
                  </div>
               </div>
            </div>
         </header>
{% endblock %}

{% block body %}
    <br>
    <br>
    <div class="container">
        <section class="section register ">
            {% for message  in app.flashes('message') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </section>
        <section class="section register ">
            {% for danger  in app.flashes('danger') %}
                <div class="alert alert-info">
                    {{ danger }}
                </div>
            {% endfor %}
        </section>
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h1 class="card-title text-center pb-0 fs-4"><b>Second</b> step to reset your password</h1>
                                    
                                </div>


                                <form method="post">
                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">New Password</label>
                                    <input type="password" name="password" id="inputPass" class="form-control" placeholder="new pass" required/>
                                    <input type="hidden"  name="token" value="{token}"/>
                                    <div class="invalid-feedback">Please enter a valid password!</div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Send</button>
                                </div>
                                </form>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}